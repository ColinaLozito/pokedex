{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", 
    "paths": {
      "@config/*": ["app/config/*"],
      "@fonts/*": ["app/assets/fonts/*"],
      "@colors/*": ["app/config/colors/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/**/*.d.ts"
  ]
}
